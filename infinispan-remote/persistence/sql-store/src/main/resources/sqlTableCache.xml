<distributed-cache name="sqlTableCache">
    <encoding media-type="application/x-protostream"/>
    <persistence>
        <table-jdbc-store
                read-only="true"
                shared="false"
                dialect="POSTGRES"
                table-name="AUTHORS">
            <connection-pool connection-url="jdbc:postgresql://localhost:5432/library"
                             username="postgres"
                             password="postgres"
                             driver="org.postgresql.Driver"/>
            <schema message-name="Author" package="library" embedded-key="true"/>
        </table-jdbc-store>
    </persistence>
</distributed-cache>